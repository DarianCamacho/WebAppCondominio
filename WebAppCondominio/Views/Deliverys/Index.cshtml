﻿﻿@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

</head>
<body>
    <figure class="text-center">
        <blockquote class="blockquote">
            <p class="mb-0 gradient-text">Crea un delivery para tu hogar</p>
        </blockquote>
        <figcaption class="blockquote-footer">
            Ingresa pedidos a tu hogar!
        </figcaption>
    </figure>
    <div class="centered-container">
        <div class="content-box">
            <a asp-controller="Visitas" asp-action="Visitas" class="btn btn-primary">Volver</a>
            <a asp-controller="Deliverys" asp-action="List" class="btn btn-primary">Ver deliverys creados</a>
            <div class="row justify-content-center">
                <div class="content-box" style="margin-top: 5px">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" id="login-tab" data-bs-toggle="tab" href="#deliverys-form"><i class="bi bi-basket-fill"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="deliverys-form">
                                    <h2>Crea un delivery</h2>
                                    <form asp-controller="Deliverys" asp-action="Create">
                                        <div class="form-floating mb-3">
                                            <input type="number" class="form-control" id="deliveryId" name="deliveryId" required maxlength="9">
                                            <label for="deliveryId">Delivery Id:</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="vehicle" name="vehicle" required>
                                            <label for="vehicle">Vehículo:</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="text" class="form-control" id="items" name="items" required>
                                            <label for="items">Pedido:</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input type="date" class="form-control" id="date" name="date" required>
                                            <label for="date">Fecha de ingreso:</label>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       <div class="centered-container">
            <figure class="text-center">
                <blockquote class="blockquote">
                    <p class="mb-0"></p>
                </blockquote>
            </figure>
        </div>
    </div>
    <!-- Include Bootstrap and JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            // Escuchar el cambio en el switch de vehículo
            $('#vehicleSwitch').change(function () {
                var isChecked = $(this).prop('checked');
                // Habilitar o deshabilitar campos de vehículo según el estado del switch
                if (isChecked) {
                    $('#vehicle, #brand, #model, #color').prop('disabled', false);
                } else {
                    $('#vehicle, #brand, #model, #color').prop('disabled', true);
                }
            });
        });
    </script>
</body>