﻿@{
    ViewData["Title"] = "List";
}

<head>

    <link rel="stylesheet" href="~/css/Home.css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <style>
        .Mybutton {
            padding: 1.3em 3em;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            color: #000;
            background-color: #fff;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
        }

            .Mybutton:hover {
                background-color: black;
                box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.4);
                color: #fff;
                transform: translateY(-7px);
            }

            .Mybutton:active {
                transform: translateY(-1px);
            }
    </style>

</head>

<body>

    <div class="centered-container">
        <div class="content-box">
            <div class="card">
                <div class="card-header">
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Cedula</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Vehiculo</th>
                                <th scope="col">Marca</th>
                                <th scope="col">Modelo</th>
                                <th scope="col">Color</th>
                                <th scope="col">Fecha</th>
                            </tr>
                        </thead>
                        <tbody id="myTable" style="resize: block">
                            @if (ViewBag.Visits != null)
                            {
                                @foreach (var @item in @ViewBag.Visits)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Vehicle</td>
                                        <td>@item.Brand</td>
                                        <td>@item.Model</td>
                                        <td>@item.Color</td>
                                        <td>@item.Date</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <p></p>
            <div>
                <button id="myButton" class="Mybutton" data-url="/Visitas/Visitas">
                    Volver
                </button>
            </div>
        </div>



    </div>

    <script>
        document.getElementById("myButton").addEventListener("click", function () {
            // Obtén la URL del atributo data-url
            var url = this.getAttribute("data-url");

            // Redirige al usuario a la URL
            window.location.href = url;
        });
    </script>

</body>