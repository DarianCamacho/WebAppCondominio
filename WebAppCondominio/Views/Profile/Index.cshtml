@{
	ViewData["Title"] = "Home Page";

}

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/Home.css" />
	<link rel="stylesheet" href="~/css/zephyr.css">
	<link rel="stylesheet" href="~/css/Profile.css">
</head>

<body>
	<div class="centered-container">
		<div class="content-box" style="background-color: lightgrey">
			<section class="content-box">
				<div>
					<div class="row d-flex justify-content-center align-items-center h-100">
						<div class="col col-md-9 col-lg-7 col-xl-5">
							<div style="border-radius: 15px;">
								<div class="card-body p-4">
									<div class="d-flex text-black">
										<div class="flex-shrink-0">
											@if (string.IsNullOrEmpty(@ViewBag.User.PhotoPath))
											{
												<!-- Mostrar la imagen predeterminada si PhotoPath está vacío -->
												<img src="wwwroot/Images/default-image.png" class="img-fluid"
													 style="width: 180px; border-radius: 10px;"/>

											}
											else
											{
												<img src="@ViewBag.User.PhotoPath"
													 alt="Generic placeholder image" class="img-fluid"
													 style="width: 180px; border-radius: 10px;"/>
											}
										</div>
										<div class="flex-grow-1 ms-3">
											<h5 class="mb-1">@ViewBag.User.Name</h5>
											<p class="mb-2 pb-1" style="color: #2b2a2a;">Senior Journalist</p>
											<div class="d-flex justify-content-start rounded-3 p-2 mb-2"
												 style="background-color: #efefef;">
												<div>
													<p class="small text-muted mb-1">Articles</p>
													<p class="mb-0">41</p>
												</div>
												<div class="px-3">
													<p class="small text-muted mb-1">Followers</p>
													<p class="mb-0">976</p>
												</div>
												<div>
													<p class="small text-muted mb-1">Rating</p>
													<p class="mb-0">8.5</p>
												</div>
											</div>
											<div class="d-flex pt-1">
												<form asp-controller="Profile" asp-action="uploadPhoto" method="post" enctype="multipart/form-data">
													<div class="row">
														<div class="col">
															<span class="btn btn-primary btn-file">
																Browse <input type="file" name="photo">
															</span>
														</div>
														<div class="col">
															<button type="submit" class="btn btn-primary flex-grow-1">Upload</button>
														</div>
													</div>
												</form>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>

</body>
